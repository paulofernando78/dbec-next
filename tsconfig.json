{
  "compilerOptions": {
    "baseUrl": "./",  // Add baseUrl for path mapping
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/img/*": [
        "./public/assets/img/*"
      ],
      "@/audio/*": [
        "./public/assets/audio/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ]
    },
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,  // Ensure consistent file naming
    "noFallthroughCasesInSwitch": true,  // Stricter switch case handling
    "sourceMap": true  // Enable source maps for debugging
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
